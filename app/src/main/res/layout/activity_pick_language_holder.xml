<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.danielkashin.yandextestapplication.presentation_layer.view.pick_language_holder.PickLanguageHolderActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/toolbar_icon_end"
                android:background="@drawable/ic_arrow_back_black_24dp"
                android:contentDescription="@string/content_description_back"/>

            <TextView
                android:id="@+id/text_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/image_toolbar"
                android:textColor="@android:color/black"
                android:textSize="@dimen/toolbar_text_size"/>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <fragment
        android:id="@+id/pick_language_fragment"
        android:name="com.danielkashin.yandextestapplication.presentation_layer.view.pick_language.PickLanguageFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>
