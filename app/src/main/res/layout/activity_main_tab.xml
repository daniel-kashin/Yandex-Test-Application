<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.danielkashin.yandextestapplication.presentation_layer.view.main_pager.MainPagerActivity">

    <com.danielkashin.yandextestapplication.presentation_layer.custom_views.NonSwipeableViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        style="@style/MainTabLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginStart="@dimen/horizontal_margin_orientation"
        android:layout_marginEnd="@dimen/horizontal_margin_orientation"
        android:background="@android:color/white"/>

</LinearLayout>
